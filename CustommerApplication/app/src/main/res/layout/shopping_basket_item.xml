<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:orientation="horizontal"
    android:gravity="center">

    <TextView
        android:id="@+id/shopping_basket_product_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="Tomato"
        android:textSize="20dp"
        android:layout_marginStart="5dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="Quantity:" />

    <EditText
        android:id="@+id/shopping_basket_product_quantity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="2"
        android:inputType="number"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="x" />

    <TextView
        android:id="@+id/shopping_basket_product_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="2.99 €" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="=" />

    <TextView
        android:id="@+id/shopping_basket_product_total_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="5.98 €" />

    <ImageButton
        android:id="@+id/shopping_basket_product_bt_delete"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@drawable/baseline_delete_24"
        android:layout_marginEnd="5dp"
        android:backgroundTint="@color/blue"
        />

</LinearLayout>
